public interface IUserRepository
{
    // Task to add a new user
    Task AddUserAsync(UserModel user);

    // Task to update an existing user
    Task UpdateUserAsync(UserModel user);

    // Task to delete a user by their ID
    Task DeleteUserAsync(int userId);

    // Task to retrieve a user by their ID
    Task<UserModel> GetUserByIdAsync(int userId);

    // Task to retrieve a list of all users
    Task<IEnumerable<UserModel>> GetAllUsersAsync();

    // Task to retrieve users with a specific role
    Task<IEnumerable<UserModel>> GetUsersByRoleAsync(UserRole role);

    // Task to retrieve a user by their username
    Task<UserModel> GetUserByUsernameAsync(string username);

    // Task to retrieve users with a certain number of loyalty points
    Task<IEnumerable<UserModel>> GetUsersByLoyaltyPointsAsync(int points);
}
