@{
    ViewData["Title"] = "Library";
}

@model List<BookModel>
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/_Layout.cshtml.css">
    <style>
        .custom-element {
            background-color: #007bff;
            color: #fff;
            padding: 10px;
        }
        .container {
            display: flex;
            justify-content: center;
            align-items: flex-start; /* Align items at the top of the container */
            height: 100vh; /* Set the height to the viewport height */
        }
        /* Style for the centered elements */
        .centered-elements {
            text-align: center; /* Center the content horizontally */
            margin-top: 20px; /* Add top margin if needed */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="centered-elements">
            <h2>All Books</h2>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>ISBN</th>
                        <th>Quantity</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Id</td>
                            <td>@book.Title</td>
                            <td>@book.Author</td>
                            <td>@book.ISBN</td>
                            <td>@book.Quantity</td>
                            <td>@book.Status</td>
                            <td>
                                <form method="post" asp-action="CheckOutBook">
                                    <input type="hidden" name="bookId" value="@book.Id" />
                                    <button type="submit">Check Out</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>