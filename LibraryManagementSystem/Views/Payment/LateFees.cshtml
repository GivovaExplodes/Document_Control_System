@{
    ViewData["Title"] = "Late Fees";
}

@model List<ReservationModel>
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/_Layout.cshtml.css">
    <style>
        .custom-element {
            background-color: #007bff;
            color: #fff;
            padding: 10px;
        }
        .container {
            display: flex;
            justify-content: center;
            align-items: flex-start; /* Align items at the top of the container */
            height: 100vh; /* Set the height to the viewport height */
        }
        /* Style for the centered elements */
        .centered-elements {
            text-align: center; /* Center the content horizontally */
            margin-top: 20px; /* Add top margin if needed */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="centered-elements">
            <h2>Late Fees</h2>

            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Book ID</th>
                        <th>Date Reserved</th>
                        <th>Amount Due</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in Model)
                    {
                        <tr>
                            <td>@reservation.ReservationId</td>
                            <td>@reservation.BookId</td>
                            <td>@reservation.ReservationDate</td>
                            <td>@PaymentService.CalculateFee(@reservation)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>